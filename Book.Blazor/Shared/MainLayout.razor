@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Authorization

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        
        <AuthorizeView>
            <Authorized>
                Hello, @context.User.Identity.Name
                <MudIconButton Href="/Logout" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Logout"></MudIconButton>
			</Authorized>
            <NotAuthorized>
				<MudIconButton Href="/Login" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Login"></MudIconButton>
            </NotAuthorized>
        </AuthorizeView>


    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Book.Blazor</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}